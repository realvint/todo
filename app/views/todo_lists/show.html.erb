<div class="card-header d-flex justify-content-between">
  <div>
    <h5 class="m-0">
      <%= @todo_list.title %>
      <span class="<%= @todo_list.badge_color %>"><%= @todo_list.status %></span>
    </h5>
    <p class="text-secondary m-0">
      <small>
        <%= @todo_list.percent_complete %>% Complete (<%= @todo_list.completed_items %>/<%= @todo_list.total_items %> Todo Items)
      </small>
    </p>
  </div>
  <div>
    <%= link_to 'Edit', edit_todo_list_path(@todo_list), class: 'btn btn-secondary' %>
  </div>
</div>

<div class="card-body">
  <div class="progress mb-3">
    <div class="progress-bar bg-info" role="progressbar"
         style="width: <%= @todo_list.percent_complete %>%"
         aria-valuenow="<%= @todo_list.percent_complete %>"
         aria-valuemin="0" aria-valuemax="100">
    </div>
  </div>
  <%= form_for([@todo_list, @todo_item]) do |f| %>
    <div class="input-group mb-3">
      <%= f.text_field :description, class: "form-control", placeholder: "Add a todo item"%>
      <div class="input-group-append">
        <%= f.submit "Add", class: "btn btn-success input-group-btn" %>
      </div>
    </div>
  <% end %>
  <ul class="list-group">
    <% @todo_list.todo_items.each do |todo_item| %>
      <% if todo_item.completed? %>
        <li class="list-group-item bg-light">
          <div class="d-flex justify-content-between">
          <span class="text-decoration-line-through">
            <em><%= link_to todo_item.description %></em>
          </span>
            <%= link_to '#', class: 'btn btn-dark ' do %>
              V
            <% end %>
          </div>
        </li>
      <% else %>
        <li class="list-group-item">
          <div class="d-flex justify-content-between">
          <span>
            <%= link_to todo_item.description %>
          </span>
            <%= link_to '#', class: 'btn btn-info ' do %>
              V
            <% end %>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>




