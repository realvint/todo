<div class="card-header">
  <div class="row">
    <div class="col-1">
    </div>
    <div class="col-11">
      <div class="d-flex justify-content-between">
        <div>
          <h5 class="m-0">
            TODO list
          </h5>
          <p class="text-secondary m-0">
            <small>
            Распланируйте свои задачи
            </small>
          </p>
        </div>
        <div>
          <%= link_to 'Добавить', new_todo_list_path, class: 'btn btn-success' %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="card-body">
  <ul class="list-group">
    <% @todo_lists.each do |todo_list| %>
      <li class="list-group-item d-flex justify-content-between">
        <div>
          <h6 class="m-0">
            <%= link_to todo_list.title, todo_list, class: 'text-dark' %>
            <span class="<%= todo_list.badge_color %>"><%= todo_list.status %></span>
          </h6>
          <p class="text-secondary m-0">
            <small>
              <%= todo_list.percent_complete %>% Завершено (<%= todo_list.completed_items %>/<%= todo_list.total_items %>)
            </small>
          </p>
        </div>
      </li>
    <% end %>
  </ul>
</div>





